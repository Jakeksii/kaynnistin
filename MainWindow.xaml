<Window x:Class="conmod.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmation Modal" Height="350" Width="525">
    <Grid>
        <Button Content="Delete Item" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Click="DeleteButton_Click"/>

        <!-- Modal Background -->
        <Rectangle Name="ModalBackground" Fill="Black" Opacity="0.5" Visibility="Collapsed"
                   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        <!-- Modal -->
        <Grid Name="Modal" Background="White" Width="300" Height="150" Visibility="Collapsed"
              HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Text="Are you sure you want to perform this action?" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
                <Button Content="Yes" Width="75" Margin="5" Click="ConfirmButton_Click"/>
                <Button Content="No" Width="75" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
